<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chào mừng!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- 🔍 Thanh Tìm Kiếm -->
    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Tìm kiếm bài đăng..."
        android:iconifiedByDefault="false"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="8dp"
        android:layout_marginBottom="10dp" />
    <!-- GIF để ẩn/hiện khung chat -->
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imgToggleChat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/chat_animation"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- Khung Chat (ẩn mặc định) -->
    <LinearLayout
        android:id="@+id/chatLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/imgToggleChat"
        android:visibility="gone"
        android:background="#EEEEEE"
        android:padding="12dp"
        android:elevation="4dp">

        <EditText
            android:id="@+id/edtMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tin nhắn..."
            android:padding="10dp"
            android:background="@android:drawable/edit_text"
            android:inputType="text" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gửi"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/txtResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phản hồi sẽ hiển thị ở đây"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />
    </LinearLayout>
    <Button
        android:id="@+id/btnPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng xuất" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp" />


</LinearLayout>
