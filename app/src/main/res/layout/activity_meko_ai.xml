<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ScrollView để chứa nội dung có thể cuộn -->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"> <!-- Quan trọng: giúp nội dung không bị bó hẹp -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFAFA"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 🔍 Thanh tìm kiếm -->
            <SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:queryHint="Tìm kiếm dịch vụ..." />

            <!-- 📋 Hiển thị kết quả từ Firebase -->
            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:numColumns="2"
                android:verticalSpacing="8dp"
                android:horizontalSpacing="8dp"
                android:background="#EFEFEF"/>

            <!-- ✨ Giao tiếp với Gemini API -->
            <EditText
                android:id="@+id/edtUserQuery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hỏi Meko AI..."
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <Button
                android:id="@+id/btnSearchAI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hỏi Meko AI"
                android:background="#4CAF50"
                android:textColor="@android:color/white" />

            <!-- 💡 Kết quả từ Gemini -->
            <TextView
                android:id="@+id/txtAIResponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kết quả AI sẽ hiển thị ở đây"
                android:padding="12dp"
                android:background="#FAFAFA"
                android:textColor="#333333"/>
        </LinearLayout>
    </ScrollView>

    <!-- Thanh điều hướng dưới cùng -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
